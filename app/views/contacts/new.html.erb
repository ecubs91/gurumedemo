<div class="container">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row" style="text-align:center">
      <h3><%= t('Send Us a Message') %></h3>
      <p><%= t('Send Us a Message p') %></p>
    </div>  
    <br>
    <%= simple_form_for @contact do |f| %>
      <div class="row">
          <div class="col-md-6">
              <div class="form-group">
                <%= f.label t("Name") %><br>
                <%= f.text_field :name, :required => true, class: "form-control" %>
              </div>
          </div>
          <div class="col-md-6">
              <div class="form-group">
                <%= f.label t("Email") %><br>
                <%= f.text_field :email, :required => true, class: "form-control" %>
              </div>
          </div>
          <div class="col-md-12">
              <div class="form-group">
                <%= f.label t("Message") %><br>
                <%= f.text_area :message, class: "form-control", :rows => 6 %>
              </div>
          </div>
    </div>
        
          <div class= "hidden">
              <%= f.input :nickname, :hint => 'Leave this field blank!' %>
          </div>
          <div>
            </br>
        <%= f.button :submit, t('Send'), :class=> "btn btn-primary pull-right" %>
          </div>
      </div>
  <% end %>
</div>
</div>
