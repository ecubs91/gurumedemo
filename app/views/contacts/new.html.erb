<div class="container">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row" style="text-align:center">
      <h3>Send Us a Message</h3>
      <p>We are excited to be able to answer any queries, so please get in touch and we will get back to you within 24 hours!</p>
    </div>  
    <br>
    <%= simple_form_for @contact do |f| %>
      <div class="row">
          <div class="col-md-6">
              <div class="form-group">
                <%= f.label "Name" %><br>
                <%= f.text_field :name, :required => true, class: "form-control" %>
              </div>
          </div>
          <div class="col-md-6">
              <div class="form-group">
                <%= f.label "Email" %><br>
                <%= f.text_field :email, :required => true, class: "form-control" %>
              </div>
          </div>
          <div class="col-md-12">
              <div class="form-group">
                <%= f.label :message %><br>
                <%= f.text_area :message, class: "form-control", :rows => 6 %>
              </div>
          </div>
    </div>
        
          <div class= "hidden">
              <%= f.input :nickname, :hint => 'Leave this field blank!' %>
          </div>
          <div>
            </br>
        <%= f.button :submit, 'Send message', :class=> "btn btn-primary pull-right" %>
          </div>
      </div>
  <% end %>
</div>
</div>
